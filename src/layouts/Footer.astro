---
import { Image } from 'astro:assets';
import zenti from '../media/svg3/zenti.svg'
import x from '../media/svg3/x.svg'
import linkedIn from '../media/svg3/linkedIn.svg'
import tiktok from '../media/svg3/tiktok.svg'
import superSite from '../media/svg3/superSite.svg'
---

<div class="footer">	
  <div class="footerCont">
    <div class="footerHead">
      <div class="footerHeadContents">        
        <div class="footerCard">
          <p class="fCardTitle">SOLUTIONS</p>
          <p class="fCardListTitle">High-risk Payments</p>
          <p class="fCardList">Merchant Account</p>
          <p class="fCardListTitle">REVENUE SHARE PROGRAMS</p>
          <p class="fCardList">Revenue Partners</p>
        </div>
        <div class="footerCard">
          <p class="fCardTitle">COMPANY</p>
          <p class="fCardList">Why Zenti?</p>
          <p class="fCardList">Case Studies</p>
          <p class="fCardList">Industries</p>
          <p class="fCardList">Contact Us</p>
          <p class="fCardList">Privacy Policy</p>
          <p class="fCardList">Terms & Conditions</p>
        </div>
        <div class="footerCard">
          <p class="fCardTitle">RESOURCES</p>
          <p class="fCardList">Free Lead Magnet</p>
          <p class="fCardList">Newsletter</p>
          <p class="fCardList">Podcast</p>
          <p class="fCardList">Integrations</p>
          <p class="fCardList">Developers</p>
        </div>
        <div></div>
      </div>
      <div class="fCardFourth">
        <h4 class="fCardFourthTitle">High-Risk Business owner? Learn the payment landscape.</h4>
        <p class="fCardFourthDetail">5 days, 5 email lessons: The need-to-know info for high-risk payment landscape in 2024.</p>
        <input class="fCardFourthInput" type="text" placeholder="Enter your email here">
        <button class="fCardFourthButton">Free lead magnet!</button>
        <p class="fCardFourthClosing">By submitting this form, you confirm that you have read and agree to Zenti’s Terms of Service and Privacy Statement</p>
      </div>
    </div>
    <div class="footerClosing">      
      <span class="">
        <Image src={zenti} alt="Zenti"/>
      </span>
      <p class="footerClosingP">© 2024 Zenti. All rights reserved.</p>
      <div class="flex gap-3">           
        <span class="linkedIn">
          <Image src={linkedIn} alt="linkedIn"/>
        </span>     
        <span class="x">
          <Image src={x} alt="x"/>
        </span>     
        <span class="tiktok">
          <Image src={tiktok} alt="tiktok"/>
        </span>
      </div>
    </div>
    <div class="footerSuperSite">      
      <span class="superSite">
        <p>WEBSITE BY</p>
        <Image src={superSite} alt="superSite"/>
      </span>
    </div>

  </div>
</div>
<style>
	.footer{
    border-radius: 64px 64px 0px 0px;
    background: var(--gray-800, #172029);
    width: 100%;
    padding: 64px 24px;
  }
  .footerHead{
    display: flex;
    padding: 0 0 64px 0
  }
  .footerCont{
    max-width: 1280px;
    width: 100%;
    margin: 0 auto;
  }
  .footerHeadContents{
    display: flex;
    justify-content: space-between;
    width: 100%;
  }
  .footerCard{
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 190px
  }
  .fCardTitle{
    color: var(--white, #FFF);
    /* uppercase/text-sm/font-bold */
    font-family: Inconsolata, sans-serif;
    font-size: 14px;
    font-style: normal;
    font-weight: 700;
    line-height: 150%; /* 21px */
    letter-spacing: 1.12px;
    text-transform: uppercase;
    margin-bottom: 8px;
  }
  .fCardListTitle{
    color: var(--white, #FFF);
    /* uppercase/text-xs/font-bold */
    font-family: Inconsolata, sans-serif;
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 150%; /* 18px */
    letter-spacing: 0.96px;
    text-transform: uppercase;
  }
  .fCardList{
    color: var(--gray-200, #A5B8CD);
    /* text-base/font-normal */
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%; /* 24px */
  }
  .fCardFourth{
    border-radius: 16px;
    border: 1px solid var(--white, #FFF);
    background: #F5F8FA;
    padding: 24px;
    max-width: 384px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .fCardFourthTitle{
    color: #2D3E50;
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 24px;
    font-style: normal;
    font-weight: 600;
    line-height: 125%; /* 30px */
  } 
  .fCardFourthDetail{
    color: #2D3E50;
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%; /* 21px */
  } 
  .fCardFourthInput{
    border-radius: 8px;
    border: 1px solid #9B9B9B;
    background: var(--white, #FFF);
    display: flex;
    padding: var(--3, 12px) var(--4, 16px);
    align-items: center;
    gap: var(--25, 10px);
    align-self: stretch;
  }
  .fCardFourthButton{
    border-radius: 240px;
    border: 1px solid var(--gray-500, #2D3E50);
    background: #1F2A32;
    display: flex;
    padding: var(--25, 10px) var(--5, 20px);
    justify-content: center;
    align-items: center;
    gap: var(--2, 8px);
    align-self: stretch;
    color: #fff;
    width: 100%;
  }
  .fCardFourthClosing{
    opacity: 0.8;
    color: var(--gray-500, #2D3E50);
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    text-decoration-line: underline;
  }
  .footerClosing{
    border-top: 1px solid var(--gray-200, #A5B8CD);
    display: flex;
    padding-top: 32px;
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
  }
  .footerClosingP{
    color: var(--gray-200, #A5B8CD);
    text-align: center;
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%; /* 24px */
  }
  .superSite{
    border-radius: 4px;
    border: 1px solid rgba(0, 112, 243, 0.04);
    background: var(--white, #FFF);
    box-shadow: 0px 4px 16px 0px rgba(0, 0, 0, 0.10);
    display: flex;
    padding: 8px 16px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 4px;
    width: 118px;

    color: rgba(0, 0, 0, 0.80);
    text-align: center;
    font-family: "Mona Sans", sans-serif;
    font-size: 8px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 0.8px;

    margin: 64px auto 0 auto;
  }
	@media screen and (max-width: 900px) { 
    .footer{
      border-radius: 16px 16px 0px 0px;
      padding: 36px 24px;
    }
    .footerCont{
      max-width: 430px;
      width: 100%;
      margin: 0 auto;
    } 
    .footerHead{
      flex-direction: column-reverse;
      gap: 36px
    }  
    .footerHeadContents{
      flex-direction: column;
      gap: 36px
    }
    .footerClosing{
      flex-direction: column;
      align-items: flex-start;
      gap: 24px;
    }
  }
</style>
