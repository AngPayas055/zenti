<style>
.bestPriceWrapper{
  padding: 0 24px;
}
.bestPriceCont{
  max-width: 624px;
  margin: 0 auto
}
.bestPrice{
  max-width: 1200px;
  border-radius: var(--rounded-xl, 32px);
  border: 1px solid var(--gray-300, #718FAF);
  background: url('../media/png/bgBestPrice.png') lightgray 50% / cover no-repeat;
  margin: 80px auto;
  padding: 48px 24px;
}
.bestPriceTitle{
  color: var(--white, #FFF);
  /* leading-tight/text-4xl/font-semibold */
  font-family: 'Public-Sans', 'sans-serif';
  font-size: 36px;
  font-style: normal;
  font-weight: 600;
  line-height: 125%; /* 45px */
  letter-spacing: -0.72px;
  margin: 32px 0;
}
.bestPriceDetails{
  color: var(--gray-200, #A5B8CD);

  /* text-xl/font-normal */
  font-family: 'Public-Sans', 'sans-serif';
  font-size: 20px;
  font-style: normal;
  font-weight: 400;
  line-height: 150%; /* 30px */
}
@media screen and (max-width: 900px) {  
  .bestPrice{
    max-width: 430px;
    border-radius: var(--rounded-xl, 32px);
    border: 1px solid var(--gray-300, #718FAF);
    background: url('../media/png/bgBestPrice.png') lightgray 50% / cover no-repeat;
    margin: 0 auto 36px auto;
    padding: 48px 24px;
  }
}
</style>
