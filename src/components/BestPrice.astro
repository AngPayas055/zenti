import { Image } from 'astro:assets';
import howItWorks1 from '../media/svg3/howItWorks1.svg'
---

<div class="bestPriceWrapper">
  <div class="bestPrice">
    <div class="bestPriceCont">    
      <p class="text-zentiGray font-inconsolata text-lg font-bold leading-[30px] tracking-[1.6px] uppercase text-center">BEST-PRICE-GUARANTEE ðŸ‘€</p>
      <h3 class="bestPriceTitle">Unbeatable Rates for High-Risk Payments: Our $1,000 Guarantee </h3>
      <p class="bestPriceDetails">
        Your business deserves the best rates for high-risk payment processing. 
        If you find a lower rate for similar services, just show us the offer. 
        We'll beat their price or pay you $1,000.
      </p>
    </div>
  </div>
