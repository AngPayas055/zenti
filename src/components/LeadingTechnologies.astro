    font-style: normal;
    font-weight: 400;
    line-height: 150%; /* 36px */
    margin-top: 16px;
    margin-bottom: 24px
  }
  .HRCardsCont{
    display: flex;
    gap: 24px;
    margin: 0 auto;
    justify-content: center;
    margin-top: 32px
  }
  .HRIcon{
    /* color: var(--gray-200, #A5B8CD);
    text-align: center; */

    /* text-5xl/font-bold */
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 38px;
    font-style: normal;
    font-weight: 700;
    line-height: 150%; /* 72px */
  }
  .HRCardLabel{
    color: var(--white, #FFF);
    text-align: center;

    /* uppercase/text-base/font-bold */
    font-family: Inconsolata, sans-serif;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 150%; /* 30px */
    letter-spacing: 1.6px;
    text-transform: uppercase;
  }
  .HRCard{
    display: flex;
    padding: 0px 24px;
    justify-content: center;
    align-items: center;
    gap: var(--6, 24px);
    border: 1px solid var(--gray-200, #A5B8CD);
    /* max-width: 700px; */
    width: auto;
  }
  .leadingTechnologiesWrapper{
    background: var(--gray-50, #F4F6F9);
  }
  .leadingTechnologies{
    padding: 96px 36px;
    background: var(--gray-50, #F4F6F9);
  }
  .leadingTechH5{
    color: var(--gray-500, #2D3E50);
    text-align: center;

    /* text-xl/font-normal */
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%; /* 30px */
  }
  .lTCardTitle{
    color: var(--gray-300, #718FAF);

    /* uppercase/text-base/font-bold */
