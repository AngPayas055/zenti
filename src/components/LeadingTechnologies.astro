    line-height: 150%; /* 30px */
    letter-spacing: 1.6px;
    text-transform: uppercase;
    text-align: center;
  }
  .ltCardInfo{
    color: var(--black-gray, #1E2022);
    text-align: center;

    /* leading-tight/text-3xl/font-semibold */
    font-family: 'Public-Sans', 'sans-serif';
