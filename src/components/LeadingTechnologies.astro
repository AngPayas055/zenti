    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%; /* 27px */
    margin-bottom: 56px
  }
  .lTCard{
    max-width: 374px;
    width: 100%;
    border-radius: var(--rounded-lg, 16px);
    border: 1px solid var(--gray-200, #A5B8CD);
    background: var(--white, #FFF);
    padding: 32px 24px
  }
  .lTCardImgCont{
    display: flex;
    justify-content: center
  }
  .lTCardContainer{
    display: flex;
    max-width: 1280px;
    justify-content: space-evenly;
    margin: 56px auto 0 auto;
    gap: 16px;
  }
