<style>
	.legendarySupport{
    width: 100%;
    padding: 96px 24px;
    background: var(--gray-50, #F4F6F9);
  }
  .legendarySupContainer{
    max-width: 1216px;
    margin: 0 auto;
  }
  .legendarySupHeader{
    width: 100%;
    display: flex;
    justify-content: space-between
  }
  .legendarySupHeaderLeft{
    max-width: 600px;
  }
  .legSupH5{
    color: var(--gray-500, #2D3E50);
    /* text-xl/font-normal */
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%; /* 30px */    
  }
  .legendarySupHeaderRight{
    max-width: 560px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .legRightP{
    color: var(--gray-500, #2D3E50);

    /* uppercase/text-sm/font-bold */
    font-family: Inconsolata, sans-serif;
    font-size: 14px;
    font-style: normal;
    font-weight: 700;
    line-height: 150%; /* 21px */
    letter-spacing: 1.12px;
    text-transform: uppercase;
    margin-bottom: 24px;
  }
  /* .avatarGroup{
    padding: 24px 0;
  } */
  .btnLegendarySup{
    display: flex;
    padding: var(--35, 14px) var(--6, 24px);
    align-items: center;
    gap: var(--2, 8px);
    border-radius: 100px;
    border: 1px solid var(--primary-500, #FF7A59);
    color: var(--primary-600, #FF491C);
    margin-top: 24px;
  }  
  .legendarySupportCardsCont{
    margin-top: 64px;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-evenly;
  }
  .legendarySupportCard{
    padding: 24px;
    max-width: 389px;
    width: 100%;
    border-radius: var(--rounded-lg, 16px);
    background: var(--white, #FFF);
    margin: 8px;
  }
  .legCardTitle{
    color: var(--gray-900, #10161C);
    /* text-lg/font-bold */
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 18px;
    font-style: normal;
    font-weight: 700;
    line-height: 150%; /* 27px */
  }
  .legCardContent{
    color: var(--gray-500, #2D3E50);
    /* text-sm/font-normal */
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%; /* 21px */
    margin: 16px 0;
  }
  .legCardAuthor{
    color: var(--gray-900, #10161C);
    /* text-base/font-bold */
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 150%; /* 24px */
    letter-spacing: -0.32px;
  }
  .legCardAuthorDetail{
    color: var(--gray-500, #2D3E50);
    /* text-sm/font-medium */
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 150%; /* 21px */
  }
	@media screen and (max-width: 900px) { 
    .legendarySupport{
      width: 100%;
      padding: 36px 24px;
      background: var(--gray-50, #F4F6F9);
    }   
    .legendarySupHeader{
      flex-direction: column;
      align-items: center;
      max-width: 550px;
      margin: 0 auto;
      gap: 48px;
    }      
    .legendarySupContainer{
      max-width: 430px;
      margin: 0 auto;
    }
  }
</style>
