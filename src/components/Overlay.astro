---
import { Image } from 'astro:assets';
import howItWorks1 from '../media/svg3/howItWorks1.svg'
---


<div class="qFooterCont">
  <h3 class="text-[#1E2022] ms-6 font-public-sans text-[36px] font-medium leading-[46px] tracking-[-0.72px] mt-[24px] mb-[32px]">Need a High-Risk Merchant Account?</h3>
  <button class="BtnQFooter">Get Free Guidance Now!</button>
</div>
<div class="qFooterContMobile">    
  <button class="BtnQFooter">Get Free Guidance Now!</button>
</div>
<style>
	
  .qFooterCont{
    padding: 16px;
    max-width: 1080px;
    width: 100%;
    border-radius: 100px;
    border: 1px solid var(--gray-300, #718FAF);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 96px;
    position: fixed;
    bottom: 0;
    background: #fff;
    left: 50%;
    transform: translateX(-50%);
    bottom: 30px;
    z-index: 1000;
  }
  .BtnQFooter{
    border-radius: 240px;
    background: var(--primary-500, #FF7A59);
    display: flex;
    padding: var(--5, 20px) var(--12, 48px);
    justify-content: center;
    align-items: center;
    gap: var(--2, 8px);
    color: var(--white, #FFF);
    font-family: 'Public-Sans', 'sans-serif';
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: 34px; /* 170% */
  }
  .qFooterContMobile{
    display: none;
  }
	@media screen and (max-width: 900px) {
    
    .qFooterCont{
      display: none;
    }  
    .qFooterContMobile{
      display: flex;
      /* max-width: 430px; */
      margin: 0 auto;
      justify-content: center;
      margin-top: 36px;
      flex-direction: column;
      align-items: center;
      position: fixed;
      bottom: 0;
      background: #fff;
      left: 50%;
      transform: translateX(-50%);
      z-index: 1000;
      padding: 12px;
      /* max-width: 430px; */
      width: 100%;
    }
    .qFooterContMobileP{
      color: var(--gray-500, #2D3E50);
      text-align: center;
      /* font-family: "Public Sans"; */
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      line-height: 120%; /* 19.2px */
      max-width: 200px;
      margin-top: 16px;
    }
  }
</style>
